<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:padding="24dp"
    tools:context=".Forgotpw">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- Top Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Icon -->
            <ImageView
                android:id="@+id/forgotPasswordIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="32dp"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/helping" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Forgot Password?"
                android:textColor="#3F51B5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:lineSpacingExtra="4dp"
                android:text="Don't worry! Enter your email address and we'll send you a link to reset your password."
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- Email Input Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Email Address"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter your email address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#888888"
                    android:textColorHint="#888888"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/emailHelperText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="We'll send a password reset link to this email"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Send Reset Link Button -->
            <Button
                android:id="@+id/sendResetLinkButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp"
                android:text="SEND RESET LINK"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- OR Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="- OR -"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- Reset via SMS Button -->
            <Button
                android:id="@+id/resetViaSmsButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#2FAD0D"
                android:elevation="2dp"
                android:text="RESET VIA SMS"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Bottom Spacer -->

            <!-- Back to Login -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/backToLoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="Remember your password? Back to Login"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>